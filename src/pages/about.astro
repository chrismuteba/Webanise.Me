---
import { client } from '../lib/contentful.js';

// Fetch blog posts from Contentful
const response = await client.getEntries({
  content_type: 'webaniseMe', // Replace with your Contentful content type ID
  order: '-fields.publishedDate' // Optional: order by publish date, newest first
});

const posts = response.items;
---
<h1>Webanise.Me SME Blog</h1>
<ul>
  {posts.map(post => (
    <li>
      <a href={`/blog/${post.fields.slug}/`}>
        <h2>{post.fields.title}</h2>
      </a>
      <p>{post.fields.excerpt || ''}</p>
    </li>
  ))}
</ul>

<h1>About Webanise.me</h1>
<p>Welcome to our SME blog and solutions platform...</p>
