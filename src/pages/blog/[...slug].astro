---
import { client } from '../../lib/contentful.js';

const { slug } = Astro.params;

const response = await client.getEntries({
  content_type: 'webaniseMe', // Replace with your Contentful content type ID
  'fields.slug': slug,
  limit: 1,
});

const post = response.items[0];
if (!post) {
  throw new Error('Post not found');
}
---
<article>
  <h1>{post.fields.title}</h1>
  <p><em>{post.fields.publishedDate || ''}</em></p>
  <div>
    {post.fields.content}
  </div>
  <a href="/">← Back to blog</a>
</article>

<html>
  <head>
    <title>{post.fields.title} | Webanise.me SME Blog</title>
    <meta name="description" content="{post.fields.excerpt || ''}" />
  </head>
  <body>
    <h1>{post.fields.title}</h1>
    <p><em>{post.fields.publishedDate || ''}</em></p>
    <div>
      {post.fields.content}
    </div>
    <a href="/">← Back to blog</a>
  </body>
</html>


